# Database Configuration
## When running via docker-compose, use service hostname 'mongodb'
MONGODB_URL=mongodb://ai_backend_user:ai_backend_password@localhost:27017/ai_backend?authSource=ai_backend
DATABASE_NAME=ai_backend

# Redis Configuration
## When running via docker-compose, use service hostname 'redis'
REDIS_URL=redis://localhost:6379/0

# Celery time limits
CELERY_SOFT_TIME_LIMIT=90
CELERY_TIME_LIMIT=120

# App-level timeouts
PROCESSING_TIMEOUT_SECONDS=120
PENDING_TIMEOUT_SECONDS=300


# Docker API
DOCKER_API_PORT=8001
DOCKER_MONGODB_URL=mongodb://ai_backend_user:ai_backend_password@mongodb:27017/ai_backend?authSource=ai_backend
DOCKER_REDIS_URL=redis://redis:6379/0

# AWS S3 Configuration (Optional - for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=ai-backend-artifacts
S3_REGION=us-east-1

# MinIO Configuration (Alternative to AWS S3)
S3_ENDPOINT_URL=http://localhost:9000

# Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
# Optional: lock down token validation
# Example issuer for Clerk dev: https://<your-app>.clerk.accounts.dev
# Example issuer for Clerk prod: https://clerk.<your-domain>.com or your Clerk domain
CLERK_ISSUER=https://polished-stallion-79.clerk.accounts.dev
# If you use an audience, set it here. Leave empty to skip aud validation.
CLERK_AUDIENCE=
## Optional: if you use Clerk JWT Templates
CLERK_JWT_TEMPLATE=
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Dev Auth Bypass (DEBUG only; do not enable in production)
DEV_AUTH_BYPASS=true
DEV_BEARER_TOKEN=change-me-dev-token
DEV_FAKE_USER_ID=user1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Notes:
# - If running the FastAPI app directly on your host (not docker-compose), use:
#   MONGODB_URL=mongodb://ai_backend_user:ai_backend_password@localhost:27017/ai_backend?authSource=ai_backend
#   REDIS_URL=redis://localhost:6379/0

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8001
